<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">  <!--  android:shape=["rectangle" | "oval" | "line" | "ring"] 默认为rectangle -->
    <!-- 半径，会被下边的属性覆盖，默认为1dp，  shape=“rectangle”时使用，-->
    <corners  
        android:radius="1dip"  
        android:topLeftRadius="1dip" 
        android:topRightRadius="1dip"
        android:bottomLeftRadius="1dip"
        android:bottomRightRadius="1dip" />
    <!--  android:type=["linear" | "radial" | "sweep"]
        android:useLevel=["true" | "false"] />
            渐变 -->
    <gradient 
        android:angle="1"
        android:centerX="1"
        android:centerY="1"
        android:centerColor="#ffffff"
        android:endColor="#ffffff"
        android:gradientRadius="1"
        android:startColor="#ffffff"
        android:type="linear"
        android:useLevel="true" />
    <padding
        android:left="1dip"
        android:top="1dip"
        android:right="1dip"
        android:bottom="1dip" />
    <!-- 指定大小，一般用在imageview配合scaleType属性使用。大小一般会适配滴 -->
    <size    
        android:width="1dip"
        android:height="1dip" />
    <!-- 填充颜色，可是是十六进制颜色。（比如想设置半透明效果，直接使用十六就只就OK） -->
    <solid   
        android:color="#ffffff" />
    <!-- 指定边框，border，dashWidth  虚线宽度和dashGap  虚线间隔宽度有一个为0dp则为 -->
    <stroke   
        android:width="1dip"
        android:color="#ffffff"
        android:dashWidth="1dip"   
        android:dashGap="1dip" />    
</shape>